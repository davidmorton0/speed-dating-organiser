<% provide(:title, 'All Events') %>

<%= render 'events_links' %>

<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>Events</h1>

      <%= will_paginate %>

      <table class="table">
        <tr>
          <th rowspan="2">Id</th>
          <th rowspan="2">Name</th>
          <th rowspan="2">Date</th>
          <th colspan="3">Daters</th>
          <th rowspan="2">Max Rounds</th>
          <th colspan="5" rowspan="2">Actions</th>
        </tr>
        <tr>
          <th>Total</th>
          <th>Female</th>
          <th>Male</th>
        </tr>

        <%= render @events %>
      </table>

      <%= will_paginate %>
    </section>
  </aside>
</div>
