<% provide(:title, @event.title) %>
<%= render 'rep/events/events_links' %>
<%= render 'rep/events/event_links' %>

<div class="row">
  <aside class="col-md-4">
    <section>
      <h1><%= @event.title %></h1>

      <h2>Schedule</h2>

      <% if @event.speed_dates.any? %>
        <%= render 'shared/schedule' %>
        <%= button_to "Regenerate Schedule", rep_event_speed_dates_path(@event), data: { confirm: 'This will delete and recreate the dating schedule.  Are you sure?' } %>
      <% else %>
        <h3>Please wait.  Schedule has not been created yet.</h3>
        <%= button_to "Create Schedule", rep_event_speed_dates_path(@event) %>
      <% end %>
    </section>
  </aside>
</div>
