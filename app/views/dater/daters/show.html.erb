<% provide(:title, @event.title) %>
<%= render 'dater/events/events_links' %>
<%= render 'dater/events/event_links' %>

<div class="row">
  <aside class="col-md-4">
    <section>
      <h1><%= current_dater.name %></h1>
      <h2><%= @event.title %></h2>

      <h3>Matches for <%= @dater.name %></h3>

      <%= form_with url: dater_event_dater_path, method: :put do |f| %>
        <table>
          <%= collection_check_boxes(:dater, :matches, @possible_matches, :id, :name) do |b| %>
            <tr>
              <td><%= b.label %></td>
              <td><%= b.check_box(checked: b.object.match) %></td>
            </tr>
          <% end %>
        </table>
        <%= f.submit "Update Matches", class: "btn btn-primary" %>
      <% end %>
    </section>
  </aside>
</div>