<% provide(:title, @event.title) %>

<div class="row">
  <aside class="col-md-4">
    <section>
      <%= link_to 'Back to Daters', event_daters_path(@event) %>
      <h3>Matches for <%= @dater.name %></h3>

      <table class="table">
        <tr>
          <th>Dater</th>
          <th>Match?</th>
        </tr>

        <% @possible_matches.each do |possible_match| %>
          <tr>
            <td><%= possible_match.name %></td>
            <td><%= check_box_tag possible_match.id, '1', @matches.include?(possible_match.id) %></td>
          </tr>
        <% end %>
      </table>
    </section>
  </aside>
</div>

<div class="row">
  <aside class="col-md-4">
    <section>
      <%= link_to 'Edit Event Details', edit_event_path(@event) %>
      <br>
      <%= link_to 'Daters', event_daters_path(@event) %>
      <br>
      <%= link_to 'Schedule', event_speed_dates_path(@event) %>
    </section>
  </aside>
</div>