<% provide(:title, 'Add Event') %>
<h1>Add Event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event, url: admin_events_path) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.label :date %>
      <%= f.date_field :date, class: 'form-control' %>
      <%= f.submit "Create event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Events', admin_events_path %>