<tr>
  <td><%= link_to event.title, admin_event_path(event) %></td>
  <td><%= event.date.strftime("%A - #{event.date.day.ordinalize} %b %Y") %></td>
  <td><%= event.daters.size %></td>
  <td><%= event.female_daters.size %></td>
  <td><%= event.male_daters.size %></td>
  <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
  <td><%= link_to 'Schedule', admin_event_speed_dates_path(event) %></td>
  <td> <%= link_to 'Delete', { controller: "events", action: "destroy", id: event.id }, 
           data: { confirm: 'Are you sure?' }, method: :delete %>
</tr>